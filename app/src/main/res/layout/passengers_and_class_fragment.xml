<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/adults_hor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/adults_ver_view"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:layout_weight="4">

            <TextView
                android:id="@+id/adults_title"
                android:text="Ενήλικες"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/myColor"
                android:textStyle="normal|bold"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/adults_description"
                android:text="12 ετών και άνω"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textStyle="normal|italic" />

        </LinearLayout>

        <EditText
            android:id="@+id/adults_number_pick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="1"
            android:textAlignment="center"/>

    </LinearLayout>










    <LinearLayout
        android:id="@+id/children_hor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/children_ver_view"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:weightSum="2">

            <TextView
                android:id="@+id/children_title"
                android:text="Παιδιά"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/myColor"
                android:textStyle="normal|bold"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/children_description"
                android:text="Κάτω των 12 ετών"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_weight="1"
                android:textSize="12sp"
                android:textStyle="normal|italic" />

        </LinearLayout>

        <EditText
            android:id="@+id/kids_number_pick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_weight="1"
            android:hint="0"
            android:textAlignment="center"
            android:layout_gravity="center" />

    </LinearLayout>










    <LinearLayout
        android:id="@+id/babies_hor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/babies_ver_view"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:weightSum="2">

            <TextView
                android:id="@+id/babies_title"
                android:text="Βρέφη"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/myColor"
                android:textStyle="normal|bold"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/babies_description"
                android:text="Κάτω των 2 ετών"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_weight="1"
                android:textSize="12sp"
                android:textStyle="normal|italic" />

        </LinearLayout>

        <EditText
            android:id="@+id/babies_number_pick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_weight="1"
            android:hint="0"
            android:textAlignment="center"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:layout_weight="1">

        <Button
            android:text="Cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_button"
            android:layout_weight="1" />

        <Button
            android:text="Done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/done_button"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>